pipeline {
    agent any

    tools {
        jdk 'jdk17'
    }

    triggers {
        cron('@midnight')
    }

    options {
        lock resource: 'actracker-api_master'
        buildDiscarder(logRotator(daysToKeepStr: '10'))
    }

    stages {

        stage('Upgrade version') {
            steps {
                withCredentials([
                    string(credentialsId: 'JenkinsGitHubPluginClassicToken', variable: 'TOKEN')
                    usernamePassword(credentialsId: 'EquinoNexus', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')
                ]) {
                    sh './gradlew --no-daemon --stacktrace clean release -PequinoVersion.gitUsername=$GH_ACTOR -PequinoVersion.gitPassword=$TOKEN -PequinoNexus.username=${USERNAME} -PequinoNexus.password=${PASSWORD}'
                }
            }
        }

        stage('Build') {
            steps {
                sh 'git branch -m master'
                withCredentials([usernamePassword(credentialsId: 'EquinoNexus', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                    sh './gradlew --no-daemon --stacktrace clean build test -PequinoNexus.username=${USERNAME} -PequinoNexus.password=${PASSWORD}'
                }
                script {
                    currentBuild.displayName = readFile file: 'build/ovh.equino.version/currentVersion'
                }
            }
        }

//        stage('DB schema migration') {
//            steps {
//                sh './gradlew --no-daemon --stacktrace :actracker-api-persistence-postgres:flywayMigrate :actracker-api-persistence-postgres:flywayInfo -PequinoDocker.remote -Pdeploy.environment=INT'
//            }
//        }

//        stage('Deploy') {
//            steps {
//                sh './gradlew --no-daemon --stacktrace deploy -PequinoDocker.remote -Pdeploy.environment=INT'
//            }
//        }

    }

    post {
        cleanup {
            deleteDir()
        }
    }
}
